	static void enviar(String emailPara, String assunto, String mensagem) throws EmailException {

		Email email = new SimpleEmail();
		email.setHostName("smtp.office365.com");
		email.setSmtpPort(587);
		email.setAuthenticator(new DefaultAuthenticator("marcio.silva@aliare.co", "M@rc!062"));
		email.setFrom("Exercício Lógica <Email>");
		email.setSubject(assunto);
		email.setMsg(mensagem);
		email.addTo(emailPara);
		email.setStartTLSEnabled(true);
		email.setDebug(true);
		email.send();
	}
}
