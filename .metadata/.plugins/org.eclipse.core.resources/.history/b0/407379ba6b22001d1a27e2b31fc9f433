package Exercicio01OrdeneAListaDeAlunosDoArquivo;

import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Path;
import java.nio.file.Paths;
import java.util.List;
import java.util.Scanner;

public class Exercicio01OrdeneAListaDeAlunosDoArquivo {

	public static void main(String[] args) throws IOException {
		Scanner scanner = new Scanner(System.in);
		ListaAlunos listaAlunos = new ListaAlunos();
		
		Path arquivo = Paths.get("C:\\Users\\Márcio\\eclipse-workspace\\CursoLogicacapitulo12\\src\\Exercicio01OrdeneAListaDeAlunosDoArquivo\\meu-aquivo-1.txt");
		
		List<String> linhas = Files.readAllLines(arquivo);
		
		System.out.println("Lista de Nomes: \n");
		
		for (int i = 0; i < linhas.size(); i++) {
			String atividade = linhas.get(i);
			
			System.out.println("Nomes:  " + i +": "+ atividade);
		} 
		

		iterar(listaAlunos);
		
		listaAlunos.ordenar();
		
		iterar(listaAlunos);
		
		scanner.close();
	}
	static void iterar(ListaAlunos listaAlunos) {
		for (int i = 0; i < listaAlunos.tamanho(); i++) {
			Aluno a = listaAlunos.obter(i);
			if (a != null) {
				System.out.println("Aluno: " + a.nome);
			}
			else {
				System.out.println("Aluno sem nome.");
			}
		}
		System.out.println("-----------------------------");
	}
	
	

}
