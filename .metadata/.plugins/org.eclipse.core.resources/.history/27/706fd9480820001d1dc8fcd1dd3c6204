public class AlgoritmoAvancado {

	public static void main(String[] args) {
		ListaAlunos listaAluno = new ListaAlunos();
		
		Aluno aluno1 = new Aluno();
		aluno1.nome = "Gabriel";
		listaAluno.adicionar(aluno1);
		
//		Aluno aluno2 = new Aluno();
//		aluno2.nome = "Lucelia";
//		lista.adicionar(null);
		
		Aluno aluno3 = new Aluno();
		aluno3.nome = "Luiz";
		listaAluno.adicionar(aluno3);

		Aluno aluno4 = new Aluno();
		aluno4.nome = "Joaquim";
		listaAluno.adicionar(aluno4);
		
		Aluno aluno5 = new Aluno();
		aluno5.nome = "Lucelia";
		listaAluno.adicionar(aluno5);
		
		Aluno aluno6 = new Aluno();
		aluno6.nome = "Marcio";
		listaAluno.adicionar(aluno6);

		
		for (int i = 0; i < listaAluno.tamanho(); i++) {
			Aluno a = listaAluno.obter(i);
			
			if (a != null) {
				System.out.println("Aluno: " + a.nome);				
			}
			else {
				System.out.println("Aluno sem nome.");
			}

		}
		
		System.out.println("-----------------------------");
		
		listaAluno.remover(aluno6);
		
		for (int i = 0; i < listaAluno.tamanho(); i++) {
			Aluno a = listaAluno.obter(i);
			if (a != null) {
				System.out.println("Aluno: " + a.nome);
			}
			else {
				System.out.println("Aluno sem nome.");
			}
		}
		
		System.out.println("-----------------------------");
		
		listaAluno.ordenar();
	}

}
